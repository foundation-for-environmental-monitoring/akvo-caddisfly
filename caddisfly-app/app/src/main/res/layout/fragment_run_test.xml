<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="org.akvo.caddisfly.viewmodel.TestInfoViewModel" />

        <variable
            name="pref"
            type="org.akvo.caddisfly.preference.AppPreferences" />

        <import type="android.view.View" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true">

        <TextView
            android:id="@+id/textInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="16dp"
            android:paddingEnd="10dp"
            android:paddingBottom="20dp"
            android:text="@string/c_place_phone"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textInfo">

            <FrameLayout
                android:id="@+id/timeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/button_green"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textTimeRemaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="16dp"
                    android:textSize="32dp"
                    tools:ignore="SpUsage"
                    tools:text="00:05:00" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/layoutWait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeLayout"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageIllustration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16sp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:src="@drawable/in_c_place"
                    android:visibility="@{pref.useCameraAboveMode() ? View.GONE : View.VISIBLE}" />

                <FrameLayout
                    android:id="@+id/camera_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    android:visibility="@{pref.useCameraAboveMode() ? View.VISIBLE : View.GONE}"
                    tools:visibility="gone" />

                <org.akvo.caddisfly.widget.CircleView
                    android:id="@+id/circleView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{pref.useCameraAboveMode() ? View.VISIBLE : View.GONE}"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/startCaptureButton"
                    style="@style/Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="24dp"
                    android:enabled="true"
                    android:minWidth="230dp"
                    android:onClick="onStartTestClick"
                    android:text="@string/start"
                    android:theme="?primaryButtonStyle"
                    android:visibility="@{pref.useCameraAboveMode() ? View.VISIBLE : View.GONE}" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_footer"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="#585858">

            <LinearLayout
                android:id="@+id/waitingLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true">

                <ProgressBar
                    android:id="@+id/waitingProgressBar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/waiting"
                    android:textAllCaps="true"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="?textColorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</layout>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layoutDilutions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="25dp"
            android:text="@string/selectDilution"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonNoDilution"
            style="@style/Button"
            android:layout_marginBottom="10dp"
            android:minWidth="260dp"
            android:minHeight="70dp"
            android:text="@string/noDilution"
            android:theme="?secondaryButtonStyle"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/buttonDilution1"
            style="@style/Button"
            android:layout_marginBottom="10dp"
            android:minWidth="260dp"
            android:minHeight="70dp"
            android:text="@string/timesDilution"
            android:theme="?secondaryButtonStyle"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/buttonDilution2"
            style="@style/Button"
            android:layout_marginBottom="10dp"
            android:minWidth="260dp"
            android:minHeight="70dp"
            android:text="@string/timesDilution"
            android:theme="?secondaryButtonStyle"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/buttonCustomDilution"
            style="@style/Button"
            android:minWidth="260dp"
            android:minHeight="70dp"
            android:text="@string/customDilution"
            android:theme="?secondaryButtonStyle"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</layout>


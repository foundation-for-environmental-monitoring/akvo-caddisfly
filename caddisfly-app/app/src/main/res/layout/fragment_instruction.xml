<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="testInfoViewModel"
            type="org.akvo.caddisfly.viewmodel.TestInfoViewModel" />

        <variable
            name="instruction"
            type="org.akvo.caddisfly.model.Instruction" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <LinearLayout
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:textIsSelectable="true"
                app:content="@{instruction}" />
        </ScrollView>

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scrollView"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/buttonRetest"
                style="@style/Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onRetestClick"
                android:text="@string/retest"
                android:visibility="visible" />

            <Button
                android:id="@+id/buttonAcceptResult"
                style="@style/Button"
                android:layout_gravity="center_horizontal"
                android:onClick="onAcceptResultClick"
                android:text="@string/acceptResult"
                android:theme="?primaryButtonStyle" />
        </LinearLayout>

        <TextView
            android:id="@+id/textDilutionInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#e9e9e9"
            android:lineSpacingExtra="4dp"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:text="@string/highLevelRecommendation"
            android:textColor="#444"
            android:textSize="16sp" />

    </RelativeLayout>
</layout>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="testInfoViewModel"
            type="org.akvo.caddisfly.viewmodel.TestInfoViewModel" />

        <variable
            name="instruction"
            type="org.akvo.caddisfly.model.Instruction" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <LinearLayout
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:textIsSelectable="true"
                app:content="@{instruction}" />
        </ScrollView>

        <Button
            android:id="@+id/buttonAcceptResult"
            style="@style/Button"
            android:layout_below="@id/scrollView"
            android:layout_centerHorizontal="true"
            android:onClick="onAcceptResultClick"
            android:text="@string/acceptResult"
            android:theme="?primaryButtonStyle"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonRetest"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/textDilutionInfo"
            android:background="#e9e9e9"
            android:drawableStart="@drawable/ic_flipped_play_arrow"
            android:onClick="onRetestClick"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:text="@string/retest"
            android:textAlignment="textStart"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDilutionInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#e9e9e9"
            android:lineSpacingExtra="4dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="20dp"
            android:text="@string/highLevelRecommendation"
            android:textColor="#444"
            android:textSize="16sp" />

    </RelativeLayout>
</layout>
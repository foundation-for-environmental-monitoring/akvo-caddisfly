<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="callback"
            type="org.akvo.caddisfly.ui.InstructionFragment" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_footer" />

        <RelativeLayout
            android:id="@+id/layout_footer"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="#585858">

            <TextView
                android:id="@+id/image_pageLeft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/back"
                android:drawableStart="@drawable/button_arrow_left_selector"
                android:focusable="true"
                android:gravity="center"
                android:padding="10dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/back"
                android:textAllCaps="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:textColor="?textColorPrimary"
                android:textStyle="bold" />

            <org.akvo.caddisfly.widget.PageIndicatorView
                android:id="@+id/pager_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/image_pageRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/next"
                android:drawableEnd="@drawable/button_arrow_right_selector"
                android:focusable="true"
                android:gravity="center"
                android:padding="10dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/next"
                android:textAllCaps="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:textColor="?textColorPrimary"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>
    </RelativeLayout>
</layout>